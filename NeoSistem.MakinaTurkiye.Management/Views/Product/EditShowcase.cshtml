@model IList<Product>

@section TitleContent {
  MemberStore
}

@section HeadContent 
{
  @Html.Partial("Style")
  <script src="~/Content/Scripts/MakinaTurkiye.js" type="text/javascript" defer="defer"></script>
  <style type="text/css">
    .row
    {
      width: 460px;
      float: left;
      margin-left: 15px;
    }
    .row:hover
    {
      background-color: #efefef;
    }
  </style>
  <script type="text/javascript">
    function check(id) {
      if (confirm('İlanı vitrinden çıkarmak istediğinizden eminmisiniz ?')) {
        $('#ProductId').val(id);
        return true;
      }
      return false;
    }
  </script>
}

@using (Html.BeginPanel())
 { 
    @Html.Partial("TabMenu")
    using (Html.BeginForm("EditShowcase", "Product", FormMethod.Post))
       { 
            <div style="float: left; width: 90%; margin: 20px 0px 0px 25px">
              <div style="float: left; width: 30%; border-bottom: dashed 1px #bababa; height: 20px;">
                <span style="font-size: 13px; font-weight: bold;">Vitrindeki İlanlar</span>
              </div>
            </div>
          <div style="width: 950px; float: left; margin: 20px 0px 20px 5px">
          @foreach (var item in Model)
               { 
                    <div class="row">
                      <div style="float: left; width: 415px; height: 21px; padding-top: 4px; padding-left: 5px;">
                        <span style="font-size: 12px;">
                          @item.ProductName</span>
                      </div>
                      <div style="float: left; width: 35px; height: 25px;">
                        <button type="submit" onclick="return check(@item.ProductId);">
                          Sil</button>
                      </div>
                      <input type="hidden" id="ProductId" name="ProductId" />
                    </div>
                } 
          </div>
        } 
 } 


