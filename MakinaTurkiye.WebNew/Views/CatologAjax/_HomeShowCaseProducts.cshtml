@model List<NeoSistem.MakinaTurkiye.Web.Models.Home.MTHomeAdModel>
<div class="row">
    <div class="col-md-12">
        <h2 style="color: #4F4F4F; font-family: Arial; font-size: 20px; font-weight: 700; line-height: 27px; margin-left: 15px;">Vitrindeki Makina ve Ekipmanlar</h2>
        @{ int i = 1;}
        @foreach (var item in Model)
        {
            <div class="col-md-2 col-xs-6 col-sm-4 home-showcase__item">
                <a href="@item.ProductUrl" title="@item.ProductName">
                    <div class="home-showcase__img">
                        <img src="@item.PicturePath" alt="@item.ProductName" />
                    </div>
                    <h5 style="min-height:32px;">@item.TruncatedProductName</h5>
                </a>
            </div>

            i++;
        }
    </div>
</div>
